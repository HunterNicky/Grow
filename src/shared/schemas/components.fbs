include "common.fbs";

namespace Game;

table Position { pos:Vec2; }
table Scale { scl:Vec2; }
table Velocity { vel:Vec2; }
table Movement { mov:Vec2; }
table Health { current_health: float; max_health: float; }
table Facing { angle:float; }

union ComponentUnion { Position, Scale, Velocity, Movement, Health, Facing, Color }

table Component {
  type:ComponentUnion;
}
